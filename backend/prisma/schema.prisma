generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}



model User {
  id   Int   @id @default(autoincrement())
  name   String
  email  String @unique
  password String 
  

}

model Category {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  products  Product[]
}

model Product {
  id          Int      @id @default(autoincrement())
  title       String   @unique
  slug        String   @unique
  description String   @db.LongText
  sku        String   @unique
  price       Float
  mrp         Float
  stock       Int      @default(0)
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  images      String   @db.LongText // JSON array as string
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([categoryId])
  @@index([slug])
}

model cart {
  id      Int      @id @default(autoincrement())
  userId    Int
  productId Int
  quantity  Int      @default(1)
  price    Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, productId])

}

model Inventory {
  id            Int      @id @default(autoincrement())
  sku           String   @unique
  totalStock    Int      @default(0)
  availableStock Int     @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  reservations  Reservation[]
}

model Reservation {
  id        Int             @id @default(autoincrement())
  orderId   String
  sku       String
  quantity  Int
  status    ReservationStatus @default(RESERVED)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  inventory Inventory        @relation(fields: [sku], references: [sku], onDelete: Cascade)

  @@index([orderId])
  @@index([sku])
}

enum ReservationStatus {
  RESERVED
  COMMITTED
  RELEASED
}
